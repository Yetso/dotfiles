/*****----- Configuration -----*****/
configuration {
	modes: "drun";
    show-icons: true;
	me-select-entry: "";
	me-accept-entry: "!MousePrimary"; 
	kb-cancel: "Escape,MousePrimary";
	hover-select: true;
    display-drun: "ï€‚ ";
	drun-display-format: "{name} [<span weight='light' size='small'><i>({generic})</i></span>]\n[<span weight='light' size='small'><i>{comment}</i></span>]";
	sorting-method: "fzf";
}

